<mjml>
  <mj-include path="./__tpl/__head.mjml" />
  <mj-body>
    <!-- logo -------------------------------------------- -->
    <mj-include path="./__tpl/__logo.mjml" />
    <!-- intro -------------------------------------------- -->
    <mj-section mj-class="section-intro" css-class="intro">
      <mj-column>
        <mj-text>
          <h1>Your company's rights was changed</h1>
          <p>Current rights for <b>@CompanyContext.CompanyName</b> at @ConfigurationContext.ProjectName:</p>
          <ul class="mb-1">
            @RightsPrecontext.RightsHints
          </ul>
          <p class="mb-0">Assign the rights for the appropriate employees.</p>
        </mj-text>
        <mj-button href="https://bidzaar.com/users">Manage employees' rights</mj-button>
        <mj-text>
          <p class="small">
            You have received this email because you are a Company Administrator at @ConfigurationContext.ProjectName and can manage employees and their access rights.</p>
        </mj-text>
      </mj-column>
    </mj-section>
    <!-- /intro -->
    <!-- footer -------------------------------------------- -->
    <mj-include path="./__tpl/__spacer.mjml" />
    <mj-include path="./__tpl/__footer.mjml" />
    <!-- /footer -->
  </mj-body>
</mjml>