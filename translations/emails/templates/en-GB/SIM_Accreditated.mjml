<mjml>
  <!-- 
Тема: 🏅 Ваша компания стала аккредитованным поставщиком
Получатель:  УК, РОЗ, сотрудники с правами Прохождение аккредитации на имейлы, указанные при логине

Организатор аккредитовал Участника в пул
-->
  <mj-include path="./__tpl/__head.mjml" />
  <mj-body><mj-text><h1>en-GB</h1></mj-text>
    <!-- logo -------------------------------------------- -->
    <mj-include path="./__tpl/__logo.mjml" />
    <!-- intro -------------------------------------------- -->
    <mj-section mj-class="section-intro" css-class="intro">
      <mj-column>
        <mj-text>
          <h1>Congratulations!</h1>
          <p>Your company <b>@TargetContext.CompanyName</b> was onboarded in the vendor pool.</p>
        </mj-text>
      </mj-column>
    </mj-section>
    <!-- /intro -->
    <!-- primary -------------------------------------------- -->
    <mj-section mj-class="section-primary">
      <mj-column css-class="bgimage bgimage-ok" padding-bottom="20px">
        <mj-text mj-class="text-primary">
          <h1>@PoolContext.PoolName</h1>
          <p class="p75"><b> Company:</b> @PoolContext.PoolOwnerCompanyName</p>
        </mj-text>
        <mj-button href="@PoolContext.Url">View vendor pool</mj-button>
      </mj-column>
    </mj-section>
    <mj-include path="./__tpl/__spacer.mjml" />
    <!-- /primary -->
    <!-- help -------------------------------------------- -->
    <mj-include path="./__tpl/__help.mjml" />
    <!-- footer -------------------------------------------- -->
    <mj-include path="./__tpl/__footer.mjml" />
    <!-- /footer -->
  </mj-body>
</mjml>